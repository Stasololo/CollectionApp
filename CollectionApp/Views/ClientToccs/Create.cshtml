@model CollectionApp.ViewModel.ClientToccVM

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ClientId, "Клиент", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ClientId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
            @Html.ActionLink("Создать клиента", "Create", "Clients")
        </div>
    </div>
        
    <div class="form-group">
        @Html.LabelFor(model => model.CashCentreId, "Кассовый центр", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CashCentreId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CashCentreId, "", new { @class = "text-danger" })
            @Html.ActionLink("Создать кассовый центр", "Create", "CashCentres")

        </div>
    </div>
   
    <div class="form-group">
        @Html.Label("Точки инкассации", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectedCashPointIds, new SelectList(ViewBag.CashPoints, "Id", "Name"), new { @multiple = "multiple" })
            @Html.ActionLink("Создать точку инкассации", "Create", "EnCashPoints")
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Счета", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectedAccountIds, new SelectList(ViewBag.Accounts, "Id", "Name"), new { @multiple = "multiple" })
            @Html.ActionLink("Создать счет", "Create", "Accounts")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
