@model IEnumerable<CollectionApp.ViewModel.ClientVM>

@{
    ViewBag.Title = "Index";
}

<h3>Клиенты</h3>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Наименование
        </th>
        <th>
            БИН
        </th>
        <th>
            Группа клиента
        </th>
        <th>
            Город
        </th>
        <th>
            Адрес
        </th>
        <th>
            Отчет. группа №1
        </th>
        <th>
            Отчет. группа №2
        </th>
        <th>
            Отчет. группа №3
        </th>
        <th>
            Отчет. группа №4
        </th>
        <th>
            Почтовый индекс
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClisubfmlName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportGroup1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportGroup2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportGroup3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportGroup4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostIndex)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }) |
            </td>
        </tr>
    }

</table>
